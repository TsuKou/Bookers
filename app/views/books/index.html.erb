<h1>Books</h1>
<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <p><%= book.title %></p>
        </td>
        <td>
          <p><%= book.body %></p>
        </td>
        <td>
          <span>
          <%= link_to "show", "/books/#{book.id}" %>
          </span>

        </td>
        <td>
          <a class="">Edit</a>
          </td>
        <td>
          <a class="">Destroy</a>
          </td>
      </tr>
    <% end %>
  </tbody>

</table>

<h2>New book</h2>

<%= form_with model: @book, method: :post do |f| %>
  <h1>Title</h1>
  <%= f.text_field :title %>
  <h1>body</h1>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
