 <h1>Books</h1>
<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%= link_to "Show", "/books/#{book.id}", class: "show_#{book.id}" %>
        </td>
        <td>
          <%= link_to "Edit", "/books/#{book.id}/edit", class: "edit_#{book.id}" %>
        </td>
        <td>
          <%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?", class: "destroy_#{book.id}" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="New book">
  <h2>New book</h2>
    <div class="error_box">


    </div>



    <%= form_with model: @book, method: :post do |f| %>
    <div class="label_G">
      <label for="book_title">Title</label><br>
      <input class="book_title" type="text" name="book[title]" id="book_title" >
    </div>

    <div class="label_G">
      <label for="book_body">Body</label><br>
      <textarea class="book_body" name="book[body]" id="book_body" ></textarea>
    </div>

    <div class="create_bt">
      <%= f.submit 'Create Book' %>
    </div>
    <% end %>
</div>