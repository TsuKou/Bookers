<h1>Books</h1>
<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <p><%= book.title %></p>
        </td>
        <td>
          <p><%= book.body %></p>
        </td>
        <td>
          <%= link_to "Show", "/books/#{book.id}", class: "show_#{book.id}" %>
        </td>
        <td>
          <%= link_to "Edit", "/books/#{book.id}/edit", class: "edit_#{book.id}" %>
        </td>
        <td>
          <%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?", class: "destroy_#{book.id}" %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

<h2>New book</h2>

<%= form_with model: @book, method: :post do |f| %>
  <h1>Title</h1>
  <%= f.text_field :title %>
  <h1>body</h1>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
