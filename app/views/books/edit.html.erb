<body>


  <h1>Edting Book</h1>

    <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="label_G">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title, :class => "book_title" %>
  </div>

  

  <div class="label_G">
    <label for="book_body">Body</label><br>
    <%= f.text_area :body, :class => "book_body" %>
  </div>




  <div class="create_bt">
    <%= f.submit 'Update Book' %>
  </div>

  <% end %>

  <%= link_to "Show", "/books/#{@book.id}", class: "show_#{@book.id}" %>

  |

  <%= link_to "Back", "/books" %>

</body>